{
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "module": "es6",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  }
}
