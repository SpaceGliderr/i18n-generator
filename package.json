    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "prettier": "2.5.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "inquirer": "^8.2.0",
    "json2csv": "^5.0.7",
    "rc": "^1.2.8",
    "ts-node": "^10.7.0"
  }
