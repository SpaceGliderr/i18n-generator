{
  "name": "i18n-generator",
  "version": "1.0.0",
  "description": "To generate, standardize, auto-translate i18n locale files",
  "main": "src/generate.ts",
  "author": "Nilch <46506221+SpaceGliderr@users.noreply.github.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "run:generate": "node --loader ts-node/esm src/generate.ts",
    "run:standardize": "node src/standardize.ts",
    "run:format": "node src/format.ts",
    "run:translate": "node --loader ts-node/esm src/translate.ts",
    "generate": "yarn run run:generate",
    "standardize": "yarn run run:standardize",
    "format": "yarn run run:format",
    "translate": "yarn run run:translate"
  },
  "devDependencies": {
